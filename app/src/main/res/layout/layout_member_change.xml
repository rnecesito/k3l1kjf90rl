<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_registration_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"

        android:background="@drawable/container_background">

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="Save"
            android:id="@+id/saveB"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/square_title"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:clickable="false" />
        
        <TextView
            android:layout_width="110dp"
            android:id="@+id/membeChangeText"
            android:layout_alignParentTop="true"
            android:text="@string/text_member_change"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_email_address"
            android:id="@+id/textView"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:textSize="25sp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/saveB" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:id="@+id/courseSpinner"
            android:background="@drawable/container_background_3"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:inputType="textEmailAddress"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/cName1"
            android:layout_alignStart="@+id/cName1" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:id="@+id/cName1"
            android:background="@drawable/container_background_3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/courseSpinner"
            android:layout_marginTop="8dp"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_password"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/cName1"
            android:layout_alignLeft="@+id/cName1"
            android:layout_alignStart="@+id/cName1" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:id="@+id/editTextPassword"
            android:background="@drawable/container_background_3"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:password="false"
            android:inputType="textPassword"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailValidateText"
            android:text="Invalid Email Address"
            android:visibility="invisible"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/courseSpinner"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not entered"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/nameValidateText"
            android:layout_below="@+id/cName1"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordValidateText"
            android:text="Not entered"
            android:textColor="@android:color/holo_red_dark"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editTextPassword"
            android:visibility="invisible"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword" />



    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />
    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/title_login"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>