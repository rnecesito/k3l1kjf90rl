<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/pb_competition_create_group_add_member"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/ll_competition_create_group_add_member"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:id="@+id/sp_competition_create_group_add_member"
            android:focusable="true"
            android:padding="10dp"
            android:entries="@array/party"
            android:transitionGroup="false"
            android:touchscreenBlocksFocus="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Member"
            android:textAllCaps="false"
            android:id="@+id/b_competition_create_group_add_member" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>
</RelativeLayout>