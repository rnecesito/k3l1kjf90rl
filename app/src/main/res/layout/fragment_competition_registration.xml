<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_registration_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/container_background">

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="Save"
            android:id="@+id/saveB"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/square_title"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:clickable="false" />

        <TextView
            android:layout_width="110dp"
            android:id="@+id/partyRText"
            android:layout_alignParentTop="true"
            android:text="@string/text_competition_registration"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_course_name"
            android:id="@+id/textView"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:textSize="25sp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/saveB" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:id="@+id/editTextEmail"
            android:background="@drawable/container_background_3"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:inputType="textEmailAddress"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Member's Email Address"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:id="@+id/editTextName"
            android:background="@drawable/container_background_3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/editTextEmail"
            android:layout_marginTop="8dp"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Member's Email Address"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:autoText="false"
            android:textColor="#ffffffff"

            android:layout_marginTop="26dp"
            android:layout_below="@+id/editTextName"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName" />


        <EditText
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:id="@+id/editTextPassword"
            android:background="@drawable/container_background_3"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:password="false"
            android:inputType="textPassword"
            android:textColor="#ff000000"
            android:paddingLeft="5dp" />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />

</RelativeLayout>
