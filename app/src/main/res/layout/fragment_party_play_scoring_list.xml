<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_registration_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/container_background">

        <TextView
            android:id="@+id/registerTv"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:text="@string/title_score_registration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <include
            android:layout_marginTop="10dp"
            android:id="@+id/tableHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/generic_3_column_item_layout"
            android:layout_below="@+id/registerTv"/>

        <ListView
            android:id="@+id/lvPartyPlayGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tableHeader" />

    </RelativeLayout>

    <Button
        android:id="@+id/menu_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:singleLine="true"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:textSize="27sp"
        android:textStyle="normal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:id="@+id/logout_button"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dd"
        android:layout_alignStart="@+id/dd" />

</RelativeLayout>
