<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:gravity="center_vertical"
    android:id="@+id/new_registration_main">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="-6dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="@string/competition_registration"
                    android:textAllCaps="false"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/square_title"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="@string/create_competition"
                    android:id="@+id/createCompetitionB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageSettingButton"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="@string/view_competition"
                    android:id="@+id/viewCompetitionB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="@string/join_competition"
                    android:id="@+id/joinCompetitionB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="@string/create_group"
                    android:id="@+id/createGroupB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="@string/view_group"
                    android:id="@+id/viewGroupsB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageButtson4"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />
            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>