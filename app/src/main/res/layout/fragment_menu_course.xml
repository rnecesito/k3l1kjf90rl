<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginTop="100dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_background"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:background="@drawable/square_title"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="@string/title_course_registration"
                android:textAllCaps="false"
                android:layout_marginLeft="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="@string/create_courses"
                    android:id="@+id/createCoursesB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageSettingButton"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="90dp"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="@string/view_courses"
                    android:id="@+id/viewCoursesB"
                    android:textAllCaps="false"
                    android:background="@drawable/button_new_golf_app"
                    android:layout_marginLeft="0dp" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/arrow"
                    android:contentDescription=""
                    android:layout_marginTop="22dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>