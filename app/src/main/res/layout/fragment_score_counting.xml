<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_registration_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/container_background"
        android:id="@+id/dd">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="@string/return_text"
            android:id="@+id/return_btn"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/button_new_golf_app"
            android:textColor="#ffffffff"
            android:textSize="21dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:clickable="false" />

        <TextView
            android:layout_width="120dp"
            android:id="@+id/registerTv"
            android:layout_alignParentTop="true"
            android:text="@string/score_counting"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="17dp"
            android:textSize="18sp"
            android:background="@drawable/square_title"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_height="60dp"
            android:linksClickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/jap_party_name"
            android:id="@+id/textView1234"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:textSize="25sp"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/registerTv" />

        <Spinner
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:id="@+id/score_count_party_spinner2"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView1234"
            android:layout_alignLeft="@+id/textView1234"
            android:layout_alignRight="@+id/textView1234"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:paddingLeft="5dp"
            android:spinnerMode="dropdown" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/score_count_party_spinner2"
            android:layout_marginTop="5dp" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_count_party_members"
                android:layout_marginTop="5dp" >

            </TableLayout>

        </ScrollView>

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:id="@+id/logout_button"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dd"
        android:layout_alignStart="@+id/dd" />

</RelativeLayout>
