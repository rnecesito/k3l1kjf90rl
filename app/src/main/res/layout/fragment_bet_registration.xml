<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_registration_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/container_background"
        android:id="@+id/dd">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="@string/text_register"
            android:id="@+id/new_registration"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/square_title"
            android:textColor="#ffffffff"
            android:textSize="21dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:clickable="false" />

        <TextView
            android:layout_width="120dp"
            android:id="@+id/partyRText"
            android:layout_alignParentTop="true"
            android:text="@string/text_bet_registration"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="17dp"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_hole"
            android:id="@+id/textView15"
            android:layout_marginTop="22dp"
            android:textSize="25sp"
            android:layout_below="@+id/partyRText"
            android:layout_toRightOf="@+id/scrollView"
            android:layout_toEndOf="@+id/scrollView"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton8"
            android:background="@drawable/arrow"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_alignTop="@+id/imageButton9"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1"
            android:id="@+id/textView16"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBottom="@+id/textView15"
            android:layout_toRightOf="@+id/imageButton9"
            android:layout_toEndOf="@+id/imageButton9" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton9"
            android:background="@drawable/arrow_back"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/partyRText"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15" />

        <TextView
            android:layout_width="130dp"
            android:id="@+id/textView17"
            android:text="Bet Setting/Reference"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="30dp"
            android:layout_below="@+id/imageButton9"
            android:layout_alignRight="@+id/imageButton9"
            android:layout_alignEnd="@+id/imageButton9" />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/textView18"
            android:text="@string/text_bet_registration"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="30dp"
            android:layout_below="@+id/imageButton8"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/text_fellow_competitors_name"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="13dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton10"
            android:background="@drawable/arrow2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton11"
            android:background="@drawable/arrow2_back"
            android:layout_alignTop="@+id/imageButton10"
            android:layout_toLeftOf="@+id/new_registration"
            android:layout_toStartOf="@+id/new_registration" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="11"
            android:id="@+id/textView20"
            android:background="@drawable/container_background_4"
            android:textSize="25sp"
            android:paddingLeft="6dp"
            android:paddingTop="5dp"
            android:layout_alignTop="@+id/textView19"
            android:layout_alignRight="@+id/imageButton8"
            android:layout_alignEnd="@+id/imageButton8" />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/title_login"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dd"
        android:layout_alignStart="@+id/dd" />

</RelativeLayout>
