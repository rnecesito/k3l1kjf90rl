<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_registration_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/container_background">

        <Button
            android:id="@+id/saveTv"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/button_new_golf_app"
            android:clickable="false"
            android:enabled="true"
            android:text="@string/text_save"
            android:textAllCaps="false"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/registerTv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/title_score_registration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/square_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerTv"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="22dp"
            android:text="@string/text_hole"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/ivForward"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="+"
            android:background="@drawable/arrow"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_below="@id/saveTv"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:visibility="invisible"
            android:layout_toEndOf="@+id/tvHoleNumber"
            android:layout_toRightOf="@+id/tvHoleNumber"
            />

        <TextView
            android:id="@+id/tvHoleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView15"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/ivBack"
            android:layout_toRightOf="@+id/ivBack"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/ivBack"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:background="@drawable/arrow_back"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_below="@+id/registerTv"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"
            />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/ivBack"
            android:layout_alignRight="@+id/ivBack"
            android:layout_below="@+id/ivBack"
            android:background="@drawable/button_new_golf_app"
            android:gravity="center"
            android:text="@string/bet_setting_reference"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvBetRegistration"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/tvHoleNumber"
            android:layout_alignStart="@+id/tvHoleNumber"
            android:layout_below="@+id/ivForward"
            android:background="@drawable/button_new_golf_app"
            android:text="@string/text_bet_registration"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="11sp"/>

        <ListView
            android:id="@+id/lvCompetitors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView17" />

    </RelativeLayout>

    <Button
        android:id="@+id/menu_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:singleLine="true"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:textSize="27sp"
        android:textStyle="normal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:id="@+id/logout_button"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dd"
        android:layout_alignStart="@+id/dd" />

    <FrameLayout
        android:id="@+id/bet_registration_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_alignParentTop="true">

        <include layout="@layout/fragment_bet_registration2"/>
        
    </FrameLayout>

</RelativeLayout>
