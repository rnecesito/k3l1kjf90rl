<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/container_background">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="スコア管理だけではなく、握りの集計、パーティー内のスコア集計、順位、最大40名までのコンペ集計に順位計算も自動で行えます。もちろん、記録は履歴として残ります。"
            android:textSize="22dp"
            android:lineSpacingMultiplier="1.25"
            android:paddingTop="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="7dp"
            android:paddingBottom="30dp"
            android:id="@+id/intro_text"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="@string/title_to_new_registration"
            android:id="@+id/to_new_registration"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/container_background_2"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            android:layout_below="@id/intro_text"
            android:layout_marginTop="-10dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />

</RelativeLayout>