<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_registration_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/container_background"
        android:id="@+id/dd">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="@string/return_text"
            android:id="@+id/return_btn"
            android:enabled="true"
            android:textAllCaps="false"
            android:background="@drawable/square_title"
            android:textColor="#ffffffff"
            android:textSize="21dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:clickable="false" />

        <TextView
            android:layout_width="120dp"
            android:id="@+id/partyRText"
            android:layout_alignParentTop="true"
            android:text="@string/bet_counting"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="17dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/square_title"
            android:layout_height="60dp"
            android:linksClickable="false" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/score_counting_table"
            android:layout_below="@+id/partyRText"
            android:layout_marginTop="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Name"
                    android:id="@+id/textView16"
                    android:textSize="27sp"
                    android:textColor="@android:color/white"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/textView22"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZZ"
                    android:id="@+id/textView23"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd Name"
                    android:textSize="27sp"
                    android:textColor="@android:color/white"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Name"
                    android:textSize="27sp"
                    android:textColor="@android:color/white"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4th Name"
                    android:textSize="27sp"
                    android:textColor="@android:color/white"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VVV"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/title_menu"
        android:textAllCaps="false"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff313131"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="27sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/title_login"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:background="#ff313131"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:textStyle="normal"
        android:singleLine="true"
        android:textSize="22sp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dd"
        android:layout_alignStart="@+id/dd" />

</RelativeLayout>
